<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@drawable/button"
                                                   android:backgroundTint="@color/com_facebook_blue"
                                                   android:id="@+id/loginContents">

    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/com_facebook_button_icon"
            android:id="@+id/loginIcon" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" android:layout_marginTop="4dp"/>
    <TextView
            android:text="@string/login_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/loginText"
            app:layout_constraintStart_toEndOf="@+id/loginIcon" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="14sp" android:layout_marginEnd="32dp" android:layout_marginStart="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>